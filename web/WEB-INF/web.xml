<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ServletDisplay</servlet-name>
        <servlet-class>Servlet.ServletDisplay</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDisplay</servlet-name>
        <url-pattern>/validate/*</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>FilterValidate</filter-name>
        <filter-class>Filter.FilterValidate</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterValidate</filter-name>
        <url-pattern>/validate/*</url-pattern>
    </filter-mapping>
</web-app>
